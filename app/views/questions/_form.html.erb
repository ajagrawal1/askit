<%= form_with model: question do |form| %>
  <div class="form-group" >
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div class="form-group" >
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :image %>
    <%= form.file_field :image %><br>
  </div>
  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>