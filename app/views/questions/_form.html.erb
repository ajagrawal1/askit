<%= form_with model: question do |form| %>
<%= render 'shared/errors', object: question %>

  <br>
  <div class="form-group row" >
    <div class="col-2">
      <%= form.label :title %><br>
    </div>
    <div class="col-10">
      <%= form.text_field :title %>
    </div>
  </div>

  <div class="form-group row" >
    <div class="col-2">
      <%= form.label :description %><br>
    </div>
    <div class="col-10">
      <%= form.text_area :description %>
    </div>
  </div>

  <div class="form-group row" >
    <div class="col-2">
      <%= form.label :image %>
    </div>
    <div class="col-10">
      <%= form.file_field :image %><br>
    </div>
    <i> (image size must be less than 1 Mb)</i>
  </div>
  
  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>