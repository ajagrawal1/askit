<ol>
  <% answer.comment.each do |comment| %>
    <% if comment.approve %>
      <% @user = User.find(comment.user_id) %> 
      <li><%= comment.comment %>  --<i>on <%= comment.created_at.strftime("%B %d,%Y at %k:%M") %> by <strong><%= @user.name %></strong> </i></li>
    <%end%>
  <% end %>
</ol>
<hr>

<% if current_user.role == "expert" %>
  <div onclick="show(<%=answer.id%>)">Want to add Comment?</div>
  <div id = <%=answer.id%> style="display:none;" >
    <p><h4><strong>Your Comment:</strong></h4>
    <%= form_with model: [ @question, answer, answer.comment.build ] do |form| %>
      <%= form.text_area :comment %><br>
      <%= form.submit %>
    <% end %></p>
  </div>
<% end %>

