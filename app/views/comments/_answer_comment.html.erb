<% answer.comment.each do |comment| %>
  <% if comment.approve %>
    <% @user = User.find(comment.user_id) %> 
    <strong><%= @user.name %>:</strong>
    <%= comment.comment %><br>
  <%end%>
<% end %>
<hr>

<% if current_user.role == "expert" %>
  <p><h4><strong>Want to add Comment:</strong></h4>
  <%= form_with model: [ @question, answer, answer.comment.build ] do |form| %>
    <%= form.text_area :comment %><br>
    <%= form.submit %>
  <% end %></p>
<% end %>